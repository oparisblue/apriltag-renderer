{
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "target": "esnext",
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "./build"
  }
}
